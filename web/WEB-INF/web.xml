<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>AuthAdminFilter</filter-name>
        <filter-class>filter.AuthAdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthAdminFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
        <url-pattern>/dashboard/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.auth.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListRoomCategory</servlet-name>
        <servlet-class>controller.admin.room_category.ListRoomCategory</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListBedCategory</servlet-name>
        <servlet-class>controller.admin.bed_category.ListBedCategory</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddBedCategory</servlet-name>
        <servlet-class>controller.admin.bed_category.AddBedCategory</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditBedCategory</servlet-name>
        <servlet-class>controller.admin.bed_category.EditBedCategory</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteBedCategory</servlet-name>
        <servlet-class>controller.admin.bed_category.DeleteBedCategory</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddRoomCategory</servlet-name>
        <servlet-class>controller.admin.room_category.AddRoomCategory</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditRoomCategory</servlet-name>
        <servlet-class>controller.admin.room_category.EditRoomCategory</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteRoomCategory</servlet-name>
        <servlet-class>controller.admin.room_category.DeleteRoomCategory</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListServiceCategory</servlet-name>
        <servlet-class>controller.admin.service_category.ListServiceCategory</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginAdminController</servlet-name>
        <servlet-class>controller.admin.auth.LoginAdminController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DashboardController</servlet-name>
        <servlet-class>controller.admin.dashboard.DashboardController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddServiceCategory</servlet-name>
        <servlet-class>controller.admin.service_category.AddServiceCategory</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditServiceCategory</servlet-name>
        <servlet-class>controller.admin.service_category.EditServiceCategory</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteServiceController</servlet-name>
        <servlet-class>controller.admin.service_category.DeleteServiceController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListBedCategory</servlet-name>
        <url-pattern>/admin/bedcategory</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddBedCategory</servlet-name>
        <url-pattern>/admin/bedcategory/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditBedCategory</servlet-name>
        <url-pattern>/admin/bedcategory/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteBedCategory</servlet-name>
        <url-pattern>/admin/bedcategory/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListRoomCategory</servlet-name>
        <url-pattern>/admin/room/category</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddRoomCategory</servlet-name>
        <url-pattern>/admin/room/category/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditRoomCategory</servlet-name>
        <url-pattern>/admin/room/category/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteRoomCategory</servlet-name>
        <url-pattern>/admin/room/category/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListServiceCategory</servlet-name>
        <url-pattern>/admin/service/category</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginAdminController</servlet-name>
        <url-pattern>/admin/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DashboardController</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddServiceCategory</servlet-name>
        <url-pattern>/admin/service/category/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditServiceCategory</servlet-name>
        <url-pattern>/admin/service/category/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteServiceController</servlet-name>
        <url-pattern>/admin/service/category/delete</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
